<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<HBox prefHeight="579.0" prefWidth="813.0" stylesheets="@../../../styles.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.jualas.filmoteca.MainController">
    <children>
        <TableView fx:id="peliculasTableView" prefHeight="579.0" prefWidth="550.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Título"/>
                <TableColumn fx:id="yearColumn" prefWidth="100.0" text="Año"/>
                <TableColumn fx:id="ratingColumn" prefWidth="100.0" text="Calificación"/>
            </columns>
        </TableView>
        <AnchorPane prefHeight="522.0" prefWidth="443.0">
            <children>
                <Label layoutX="100.0" layoutY="10.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
                       text="FILMOTECA"/>
                <GridPane layoutX="14.0" layoutY="50.0" hgap="10" vgap="10">
                    <children>
                        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="titleLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Año:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="yearLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextArea fx:id="descriptionTextArea" editable="false" prefHeight="100.0" prefWidth="200.0"
                                  wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Calificación:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="ratingLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Póster:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="posterUrlTextField" editable="false" GridPane.rowIndex="4"
                                   GridPane.columnIndex="1"/>
                        <ImageView fx:id="posterImageView" fitHeight="200.0" fitWidth="150.0" GridPane.rowIndex="5"
                                   GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
                <HBox layoutX="95.0" layoutY="523.0" prefHeight="25.0" prefWidth="241.0">
                    <children>
                        <Button onAction="#onEditMovieClick" text="Editar"/>
                        <Button onAction="#onNewMovieClick" text="Nueva">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button onAction="#onDeleteMovieClick" text="Eliminar">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button onAction="#onCloseAppClick" text="Cerrar">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</HBox>